<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">

	<TextView android:text="@string/leitor_noticias"
	android:id="@+id/TextView01" android:layout_width="wrap_content" 
	android:layout_height="wrap_content"/>

	<ListView android:layout_width="fill_parent" android:layout_height="fill_parent" 
	android:id="@+id/ListView01" android:layout_weight="1"></ListView>
	
	
	<Button android:text="@string/ler_noticias"
	android:id="@+id/Button01" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"/>
</LinearLayout>

